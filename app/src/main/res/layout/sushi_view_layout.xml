<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/sushi_size"
        android:layout_height="@dimen/sushi_size"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_sushi"
            android:layout_width="@dimen/sushi_size"
            android:layout_height="@dimen/sushi_size"
            android:contentDescription="@string/sushi_image_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_sushi" />

        <ImageView
            android:id="@+id/img_in_top_right"
            android:layout_width="@dimen/sushi_size"
            android:layout_height="@dimen/sushi_size"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/first_sushi_topping_desc"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:scaleX="@dimen/sushi_scale"
            android:scaleY="@dimen/sushi_scale"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/image_sushi"
            app:layout_constraintEnd_toEndOf="@id/image_sushi"
            app:layout_constraintStart_toStartOf="@id/image_sushi"
            app:layout_constraintTop_toTopOf="@id/image_sushi"
            app:srcCompat="@drawable/ic_in_salmon" />

        <ImageView
            android:id="@+id/img_in_top_left"
            android:layout_width="@dimen/sushi_size"
            android:layout_height="@dimen/sushi_size"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="@string/second_sushi_topping_desc"
            android:rotation="-120"
            android:scaleType="fitCenter"
            android:scaleX="@dimen/sushi_scale"
            android:scaleY="@dimen/sushi_scale"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/image_sushi"
            app:layout_constraintEnd_toEndOf="@id/image_sushi"
            app:layout_constraintStart_toStartOf="@id/image_sushi"
            app:layout_constraintTop_toTopOf="@id/image_sushi"
            app:srcCompat="@drawable/ic_in_salmon" />

        <ImageView
            android:id="@+id/img_in_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/third_sushi_topping_desc"
            android:rotation="120"
            android:scaleType="fitCenter"
            android:scaleX="@dimen/sushi_scale"
            android:scaleY="@dimen/sushi_scale"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/image_sushi"
            app:layout_constraintStart_toStartOf="@id/image_sushi"
            app:layout_constraintTop_toTopOf="@id/image_sushi"
            app:srcCompat="@drawable/ic_in_salmon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>